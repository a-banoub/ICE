# === Required ===
DISCORD_WEBHOOK_URL=https://discord.com/api/webhooks/YOUR_ID/YOUR_TOKEN

# === Reddit (Optional - enables Reddit collector) ===
REDDIT_CLIENT_ID=your_client_id
REDDIT_CLIENT_SECRET=your_client_secret
REDDIT_USER_AGENT=ice-monitor:v0.1 (by /u/yourusername)

# === Twitter/X (Optional - enables Twitter collector) ===
# Uses Playwright with authenticated session for search + profile scraping.
# Requires: playwright install chromium
# Note: Runs a headed browser window (X blocks headless).
# Provide credentials for search/trending access. Cookies are saved
# to .twitter_cookies.json so login only happens once.
TWITTER_ENABLED=true
TWITTER_USERNAME=your_x_username
TWITTER_PASSWORD=your_x_password

# === Iceout.org (enabled by default, no keys needed) ===
ICEOUT_ENABLED=true
ICEOUT_POLL_INTERVAL=90

# === Bluesky (enabled by default, free public API, no auth needed) ===
BLUESKY_ENABLED=true
BLUESKY_POLL_INTERVAL=120

# === Tuning (all optional, defaults shown) ===
TWITTER_POLL_INTERVAL=120
REDDIT_POLL_INTERVAL=60
RSS_POLL_INTERVAL=300
REPORT_MAX_AGE_SECONDS=10800
CORRELATION_WINDOW_SECONDS=10800
MIN_CORROBORATION_SOURCES=2
SIMILARITY_THRESHOLD=0.35
GEO_PROXIMITY_KM=3.0
LOG_LEVEL=INFO
DRY_RUN=false
DB_PATH=ice_monitor.db
